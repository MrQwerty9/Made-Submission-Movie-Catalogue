<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sstudio.madesubmissionmoviecatalogue">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true">
        <activity
            android:name=".reminder.ReminderActivity"
            android:parentActivityName=".mvp.MainActivity"></activity>
        <activity
            android:name=".mvp.detail.DetailActivity"
            android:parentActivityName=".mvp.MainActivity" />
        <activity
            android:name=".mvp.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".provider.MovieTvProvider"
            android:authorities="com.sstudio.madesubmissionmoviecatalogue"
            android:exported="true"
            android:readPermission="com.sstudio.madesubmissionmoviecatalogue.READ_DATABASE"
            android:writePermission="com.sstudio.madesubmissionmoviecatalogue.WRITE_DATABASE" />
        <receiver
            android:name=".NetworkReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".reminder.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <receiver android:name=".widget.FavoriteWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_widget_info" />
        </receiver>
        <service
            android:name=".widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

    <permission
        android:name="com.sstudio.madesubmissionmoviecatalogue.WRITE_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.sstudio.madesubmissionmoviecatalogue.READ_DATABASE"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>